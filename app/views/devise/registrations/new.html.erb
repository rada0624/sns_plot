<div class="main_area main_area_center">
<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="set_field_outbox">
    <div class="category1">
        <%= f.label :ニックネーム %>
    </div>
    <div class="category2">
        <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :メールアドレス %><br />
    </div>
    <div class="category2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :誕生日 %>
    </div>
    <div class="category2">
      <%= raw sprintf(
                  f.date_select(
                      :birth,
                      use_month_numbers: true,
                      start_year:        1930,
                      end_year:          (Time.now.year - 0),
                      default:           Date.new(1989, 1, 1),
                      date_separator:    '%s'),
                  '年 ', '月 ') + '日' %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :職業 %>
    </div>
    <div class="category2">
      <%= f.text_field :job, autofocus: true, autocomplete: "job" %>
    </div>
  </div>



  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :"学習状況の公開" %><br>
    </div>
    <div class="category2">
      <%= f.select :is_open, [["公開する", "1"], ["公開しない", "2"]] ,class:"form-control" %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      （<%= @minimum_password_length %>文字以上）
      <% end %>
    </div>
    <div class="category2">

      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :パスワード（再入力） %><br />
    </div>
    <div class="category2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", :class => "body-button" %>
  </div>

  <% end %>
  <hr />

  <%= render "devise/shared/links" %>

</div>
