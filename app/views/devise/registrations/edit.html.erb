<div class="main_area main_area_center">
<h2>ユーザー情報の編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="set_field_outbox">
    <div class="category1">
        <%= f.label :ニックネーム %>
    </div>
    <div class="category2">
        <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
        <%= f.label :メールアドレス %>
    </div>
    <div class="category2">

      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :誕生日 %>
    </div>
    <div class="category2">

      <div class="birth_date_field">
        <%= raw sprintf(
                    f.date_select(
                        :birth,
                        use_month_numbers: true,
                        start_year:        1930,
                        end_year:          (Time.now.year - 0),
                        default:           Date.new(1989, 1, 1),
                        date_separator:    '%s'),
                    '年 ', '月 ') + '日' %>
      </div>
    </div>
  </div>


  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :職業 %><br />
    </div>
    <div class="category2">
      <%= f.text_field :job, autofocus: true, autocomplete: "job" %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :"学習状況の公開" %><br>
    </div>
    <div class="category2">
      <%= f.select :is_open, [["公開する", "1"], ["公開しない", "2"]] ,class:"form-control" %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :パスワード %> ※更新時のみ<br />
    </div>
    <div class="category2">
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :パスワード（再入力） %>
    </div>
    <div class="category2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="set_field_outbox">
    <div class="category1">
      <%= f.label :現在のパスワード %>
    </div>
    <div class="category2">
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "更新",  :class => "body-button" %>
  </div>
<% end %>

<hr />

<h3>会員情報の削除</h3>

<p><%= button_to "会員情報の削除", registration_path(resource_name), data: { confirm: "退会するとアカウントの復活はできません。本当によろしいですか？" }, method: :delete,  :class => "body-button" %></p>
<hr />
<%= link_to "Back", :back %>

</div>
</div>
