<h2>ユーザー情報の編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>



  <div class="birth_date_field">
    <%= f.label :誕生日 %><br />
    <%= raw sprintf(
                f.date_select(
                    :birth,
                    use_month_numbers: true,
                    start_year:        1930,
                    end_year:          (Time.now.year - 0),
                    default:           Date.new(1989, 1, 1),
                    date_separator:    '%s'),
                '年 ', '月 ') + '日' %>
  </div>

  <div class="field">
    <%= f.label :職業 %><br />
    <%= f.text_field :job, autofocus: true, autocomplete: "job" %>
  </div>

  <div class="field">
   <%= f.label :"学習状況の公開" %><br>
   <%= f.select :is_open, [["公開する", "1"], ["公開しない", "2"]] ,class:"form-control" %>
  </div>

  <br />

  <div class="field">
    <%= f.label :パスワード %> ※更新する場合のみ入力<br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワード（再入力） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br />
  <div class="field">
    <%= f.label :現在のパスワード %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<hr />

<h3>退会</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
